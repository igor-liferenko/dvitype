Add this `dvitype' script to PATH:

    #!/bin/sh
    while true; do
      case $1 in
      -output-level)
        shift
        output_level=$1
        ;;
      -page-start)
        shift
        page_start=$1
        ;;
      -max-pages)
        shift
        max_pages=$1
        ;;
      -dpi)
        shift
        resolution=`echo $1 | tr -d .`/1`echo $1 | cut -sd. -f2 | tr 0-9 0`
        ;;
      -magnification)
        shift
        new_mag=$1
        ;;
      *)
        break
        ;;
      esac
      shift
    done
    /path/to/dvitype/dvitype ${1%.dvi}.dvi /tmp/dvitype.$$ "$output_level" "$page_start" "$max_pages" "$resolution" "$new_mag"
    ret=$?
    sed '$a\' /tmp/dvitype.$$ 2>/dev/null
    rm -f /tmp/dvitype.$$
    exit $ret

Adjust path.ch
